.article-entry
  h1
    font-size: 27px
    margin: 30px auto 15px
  h2
    font-size: 25px
    margin: 26px auto 13px
  h3
    font-size: 23px
    margin: 22px auto 11px
  h4
    font-size: 21px
    margin: 18px auto 9px
  h5
    font-size: 19px
    margin: 14px auto 7px
  h6
    font-size: 17px
    margin: 10px auto 5px
  hr
    border: 1px solid #eef2f8
    margin: 26px 0
  strong
    font-weight: bold
  em, cite
    font-style: italic
  sup, sub
    font-size: 0.75em
    line-height: 0
    position: relative
    vertical-align: baseline
  sup
    top: -0.5em
  sub
    bottom: -0.2em
  small
    font-size: 0.85em
  acronym, abbr
    border-bottom: 1px dotted
  ul
    margin-bottom: 10px
    list-style: disc
    margin-left: 26px
  ol
    li
      list-style: decimal
      margin: 4px 26px
  dt
    font-weight: bold