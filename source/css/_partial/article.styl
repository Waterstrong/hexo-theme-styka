/* copyright */
.copyright {
width: 85%;
    max-width: 45em;
    margin: 0 auto;
    padding: 0.5em 1.8em;
    border: 1px solid #fff;
    font-size: 0.93em;
    line-height: 1.6em;
    word-break: break-word;
    background: #fff;
    box-shadow: 4px 4px 18px rgba(0, 0, 0, 0.46);
    border-radius: 6px;
    span {
        margin-right: 1em;
        color: #5d686f;
        font-weight: bold;
    }
    a {
        &:hover {
            font-weight: bold;
            text-decoration: underline;
        }
    }
    &:hover p .copy-path::after {
        content: "复制";
    }
    .post-url:hover {
        font-weight: normal;
    }
    .copy-path {
        margin-left: 1em;
        &:hover {
            color: #4094c7;
            cursor: pointer;
        }
    }
}




