.body-wrap{
  margin-bottom: 80px;
}
.article {
  margin: 30px 35px;
  position: relative;
  -webkit-transition: all 0.2s ease-in;
  &.show{
    visibility: visible;
    -webkit-animation: cd-bounce-1 0.6s;
    -moz-animation: cd-bounce-1 0.6s;
    animation: cd-bounce-1 0.6s;
  }
  &.hidden{
    visibility: hidden;
  }
  img{
    max-width: 100%;
    vertical-align: -webkit-baseline-middle;
  }
}
@-webkit-keyframes cd-bounce-1 {
  0% {
    opacity: 0;
    -webkit-transform: scale(1);
  }
  60% {
    opacity: 1;
    -webkit-transform: scale(1.01);
  }
  100% {
    -webkit-transform: scale(1);
  }
}
@-moz-keyframes cd-bounce-1 {
  0% {
    opacity: 0;
    -moz-transform: scale(1);
  }
  60% {
    opacity: 1;
    -moz-transform: scale(1.01);
  }
  100% {
    -moz-transform: scale(1);
  }
}
@keyframes cd-bounce-1 {
  0% {
    opacity: 0;
    -webkit-transform: scale(1);
    -moz-transform: scale(1);
    -ms-transform: scale(1);
    -o-transform: scale(1);
    transform: scale(1);
  }
  60% {
    opacity: 1;
    -webkit-transform: scale(1.01);
    -moz-transform: scale(1.01);
    -ms-transform: scale(1.01);
    -o-transform: scale(1.01);
    transform: scale(1.01);
  }
  100% {
    -webkit-transform: scale(1);
    -moz-transform: scale(1);
    -ms-transform: scale(1);
    -o-transform: scale(1);
    transform: scale(1);
  }
}
.article-index{
  margin-left: 200px;
  padding: 15px 0;
  margin-right: 75px;
  .brief{
    display: block;
    color: #a8a8a8;
    font-size: 12px;
    line-height: 14px;
    height: 7px;
    padding-left: 2px;
    &:before{
      display: inline-block;
      content: "“";
      font-family: serif;
      font-size: 30px;
      float: left;
      margin: 4px 4px 0 -12px;
      color: #c8c8c8;
    }
  }
}

.article-title {
  color: #4d4d4d;
  margin-left: 0;
  font-weight: 700;
  line-height: 1.5em;
  margin-bottom: 30px;
  text-align: center;
  font-size: 26px;
  -webkit-transition: color 0.3s;
  -moz-transition: color 0.3s;
  -o-transition: color 0.3s;
  transition: color 0.3s;
  &:hover{
    color: #4094c7;
  }
}
#more{
  display: none;
}
.article-inner{
  position: relative;
  border: 1px solid #fff;
  background: #fff;
  margin-bottom: 20px;
  padding-bottom: 20px;
  border-radius: 6px;
  box-shadow: 4px 4px 18px rgba(0, 0, 0, 0.46);
}
.article-header{
  border-left: rgba(63, 63, 63, 0) 5px solid;
  padding: 15px 0px 15px 25px;
}

.article-info.info-on-right{
  margin: 10px 0 0 0;
  float: right;
}
.article-info-index.article-info{
  margin: 30px 30px 0 30px;
}
.article-info-post.article-info{
  padding: 0
  border: none;
  margin: -30px 0 20px 30px;
}
.article-entry{
  line-height: 1.8em;
  padding-right: 30px;
  padding-left: 30px;
  p{
    margin-top: 16px;
  }
  p code,li code{
    padding: 1px 5px;
    margin: 0 3px;
    color: #5d686f;
    background-color: #f7f8f8;
    border: 1px solid #ccc;
    -webkit-border-radius: 5px
    border-radius: 5px;
    //font-family: Menlo,Monaco,"Andale Mono","lucida console","Courier New",monospace;
    font-family: Consolas,"Courier New",Courier;
    text-shadow: none;
    word-wrap: break-word;
    //white-space: pre;
    //display: inline-block;
    font-size: 17px;
    font-weight: 400;
  }
  blockquote {
    p {
      margin-top: 0;
    }
    blockquote {
      border-left: none;
    }
  }
  em {
    font-style: italic;
  }
  ul{
    li:before{
    }
  }
  ul,ol{
    font-size: 16px;
    padding-left: 14px;
  }
  li{
    ul,ol{
      list-style: circle;
    }
  }
  video{
    max-width: 100%;
  }
  strong {
    font-weight: bold;
  }
  .caption{
    display: block;
    font-size: 0.8em;
    color: #aaa;
  }
  h1, h2, h3, h4, h5, h6 {
    color: #4d4d4d;
    font-weight: 700;
    text-align: left;
  }
  hr{
    height: 0;
    margin-top: 20px;
    margin-bottom: 20px;
    border-left: 0;
    border-right: 0;
    border-top: 1px solid #DDD;
    border-bottom: 1px solid #FFF;
  }
  pre {
    font-size: 1 / 0.9em;
    line-height: 1.5;
    margin-top: 10px;
    padding: 5px 15px;
    overflow-x: auto;
    color: #657b83;
    font-size: 10px;
    border: 1px solid #ccc;
    text-shadow: none;
    font-family: Menlo,Monaco,"Andale Mono","lucida console","Courier New",monospace;
    code{
      font-size: 12px;
    }
  }
  table{
    width:100%;
    line-height: 40px;
    //border: 1px solid #dedede;
    margin: 10px 0;
    color: #5d686f;
    border-collapse:collapse;
    tr,td{
      height: 100%;
    }
    thead{
      tr {
        border-bottom: 2px solid gray;
        th {
          font-weight: 700;
        }
      }
    }
    tbody{
      tr:hover{
        background: #dedede;
      }
    }
    tr:nth-child(2n) {
      background: #f7f8f8;
    }
    td,th{
      border: none;
      padding: 0 10px;
    }
  }
  figure{
    table {
      border: none;
      width: auto;
      margin: 0;
      tbody{
        tr:hover{
          background: none;
        }
      }
    }
  }
}

.article-meta{
  width: 150px;
  text-align: right;
  position: absolute;
  right: 0;
  top: 23px;
  text-align: center;
  z-index: 1;
  time{
    color: #aaa;
    &:before{
      color: #999;
      content: "\f073";
      font: 17px FontAwesome;
      margin-right: 10px;
    }
  }
}

.article-more-link{
  margin-top: 5px;
  text-align: right;
  a{
    background: #258FB8;
    color: #fff;
    font-size: 12px;
    padding: 2px 8px 4px;
    line-height: 16px;
    -webkit-border-radius: 2px;
    -moz-border-radius: 2px;
    border-radius: 2px;
    transition: background 0.3s;
    &:hover{
      opacity: 0.7;
    }
    &.hidden{
      visibility: hidden;
    }
  }
}

#article-nav{
  margin: 80px 0 30px 0;
  padding-bottom: 10px;
  .article-nav-link-wrap{
    margin: 0px 30px 0px 30px;
    font-size: 14px;
    color: #333;
    .article-nav-title{
      display: inline-block;
      font-size: 1rem;
      color: #5d686f;
      transition: color 0.3s;
    }
    strong{
      background: #999;
      color: #fff;
      border-radius: 100%;
      width: 15px;
      height: 15px;
      display: inline-block;
      text-align: center;
      transition: background 0.3s;
    }
    &:hover{
      strong{
        background: #248EB7;
      }
      .article-nav-title{
        color: #4094c7;
        text-decoration: underline;
      }
    }
  }
  #article-nav-older{
    float: right;
  }
}

