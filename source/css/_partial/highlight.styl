
code-bgc = #f7f8f8
code-tag = #F92672
code-attr = #A6E22E
code-word = #5d686f
code-value = #E6DB74
code-number = #9E90FF
code-keyword = #66D9EF
code-comment = #75715E
code-argument = #FD971F

$code-block
  background: code-bgc
  margin: 10px 0
  padding: 10px 10px
  overflow: auto
  color: #4C4C4C
  line-height: font-size * line-height

$line-numbers
  color: #666

.article-entry
  pre, code
    font-family: font-mono
  blockquote
    padding: 0 15px
    word-break: break-word
    margin: 10px 0
    font-style: italic
    border-left: 3px solid #5d686f
    -webkit-box-sizing: border-box
    -moz-box-sizing: border-box
    box-sizing: border-box
  code
    background: color-background
    padding: 0 0.3em
    border: none
  pre
    @extend $code-block
    color: code-word
    code
      background: none
      text-shadow: none
      padding: 0
      color: code-word
  p
    a
      color: #349ef3
      padding: auto
      word-wrap: break-word
      margin: 2px
      //white-space: pre
      //display: inline-block
    a.fancy-ctn.fancybox:hover
      cursor: zoom-in
    //a::before
    //  padding-right: 6px
    //  content: "\f0c1"
    //  font: normal normal normal 14px/1 FontAwesome
    a:hover
      text-decoration: underline

  //.highlight::before
  //  content: attr(data-lang) " code"
  //  display: block
  //  background-color: #0083A0
  //  margin: 0 -16px 16px -16px
  //  padding: 8px 16px
  //  color: #EFEFEF
  //  font-family: Lato,"Microsoft YaHei",sans-serif
  //  font-size: 1.1rem
  //  text-shadow: none
  //  border-bottom: dashed 1px #000
  //  text-transform:capitalize
  .highlight
    @extend $code-block
    border-radius: 4px
    padding: 0 10px
    pre
      border: none
      margin: 0
      padding: 0 0 0 15px
    table
      margin: 10px 0
      width: auto
      color: #FFF
      thead
        tr
          background: #2D2D2D
        tr:hover
          background: #151414
    td
      border: none
      padding: 0
    th
      border: 1.5px dashed #020202
    figcaption
      clearfix()
      font-size: 0.85em
      color: highlight-comment
      line-height: 1em
      margin-bottom: 1em
      a
        float: right
    .gutter pre
      @extend $line-numbers
      text-align: right
      padding: 0 15px 0 5px
      border-right: 1px solid #E6E6E6
      .line
        text-shadow: none
    .line
      font-size: 15px
      height: 15px
  .gist
    margin: 0 article-padding * -1
    border-style: solid
    border-color: color-border
    border-width: 1px 0
    background: code-bgc
    padding: 15px article-padding 15px 0
    .gist-file
      border: none
      font-family: font-mono
      margin: 0
      .gist-data
        background: none
        border: none
        .line-numbers
          @extend $line-numbers
          background: none
          border: none
          padding: 0 20px 0 0
        .line-data
          padding: 0 !important
      .highlight
        margin: 0
        padding: 0
        border: none
      .gist-meta
        background: code-bgc
        color: highlight-comment
        font: 0.85em font-sans
        text-shadow: 0 0
        padding: 0
        margin-top: 1em
        margin-left: article-padding
        a
          color: color-link
          font-weight: normal
          &:hover
            text-decoration: underline

pre
  .doctype
    color: #586e75
  .tag
    color: #839496
  .title
    color: #66D9EF
  .strings
    color: #2aa198
  .attribute
    color: #b58900
  .cpp
  .annotation
  .command
    color: color-link
  .comment
    color: code-comment
  .keyword
    color: code-keyword
  .function
  .class .params
    color: #66D9EF
  .params
  .function
  .css .value
    color: code-word
  .css ~ * .tag
  .at_rule
  .preprocessor
    color: code-tag
  .built_in
  .class
  .css ~ * .class
  .function
    color: code-attr
  .value
  .number
    color: #7163D7
  .id
  .css ~ * .id
    color: code-argument
  .link_label
  .code
  .operator
  .link_url
    color: color-link